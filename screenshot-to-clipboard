#!/bin/bash

# Take a screenshot with Flameshot
flameshot gui -r > /tmp/screenshot.png

# Extract the text from the screenshot with Tesseract OCR
tesseract /tmp/screenshot.png /tmp/screenshot.txt

# Copy the text to the primary selection using xclip
xclip -selection primary < /tmp/screenshot.txt

# Show a notification to indicate that the text has been copied to the clipboard
notify-send "Screenshot text copied to primary selection"

